<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="report_sale_order_booking_order_customer" model="ir.actions.report">
        <field name="name">Print Booking Order</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">report_sale_order_inherit.report_booking_order_customer</field>
        <field name="report_file">report_sale_order_inherit.report_booking_order_customer</field>
        <field name="binding_model_id" ref="model_sale_order"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_booking_order_customer">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="student">
                <t t-call="web.external_layout">
                    <div class="page">
                        <style>
                            body {padding:0px !important; margin:0px !important;}

                            .avatar {
                                position: relative;
                                left: 590px;
                                width: 150px;
                                height:150px;
                                bottom:100px;
                                background-size: cover; /* Ensures the image will cover the entire element */
                                background-position: top center; /* Centers the image */
                            }
                            table {
                                position:relative;
                                left:50px;
                                width:75%;
                                bottom:50px;
                            }
                            .borderless td, .borderless th, .borderless tr {
                                border: 1px solid white;
                            }
                        </style>
                        <div style="height:100%; width:100%;">
                            <div style="display:flex;left:50px;position:relative">
                                <h3><span t-if="student.name" t-field="student.name"
                                  style="font-size:35px; text-align:center; color:black; white-space:nowrap;position:relative;bottom:20px"/></h3>
                                 <br/>
                                <span t-if="student.nickname" t-field="student.nickname"
                                  style="font-size:35px;text-align:center;color:black; white-space:nowrap;"/>
                                <t t-if="student.image_1920">
                                    <div class="avatar"
                                     t-att-style="'background-image: url(' + image_data_uri(student.image_1920) + ');'"/>
                                </t>
                            </div>
                            <table class="table borderless">
                                <tr>
                                    <td>NIK (Nomor Induk Kependudukan)</td>
                                    <td>:</td>
                                    <td><span t-if="student.id_card_number" t-field="student.id_card_number"/></td>
                                </tr>
                                <tr>
                                    <td>Lokasi</td>
                                    <td>:</td>
                                    <td><span t-if="student.class_id" t-field="student.class_id.name"/></td>
                                </tr>
                                <tr>
                                    <td>Jenis Kelamin</td>
                                    <td>:</td>
                                    <td><span t-if="student.gender" t-field="student.gender"/></td>
                                </tr>
                                <tr>
                                    <td>Tempat Lahir</td>
                                    <td>:</td>
                                    <td><span t-if="student.birth_place" t-field="student.birth_place"/></td>
                                </tr>
                                <tr>
                                    <td>Kabupaten Kelahiran</td>
                                    <td>:</td>
                                    <td><span t-if="student.address_student" t-field="student.address_student"/></td>
                                </tr>
                                <tr>
                                    <td>Tanggal Lahir</td>
                                    <td>:</td>
                                    <td><span t-if="student.birth_date" t-field="student.birth_date"/></td>
                                </tr>
                                <tr>
                                    <td>Umur</td>
                                    <td>:</td>
                                    <td><span t-if="student.age" t-field="student.age"/> Tahun</td>
                                </tr>
                                <tr>
                                    <td>Alamat</td>
                                    <td>:</td>
                                    <td><span t-if="student.address_student" t-field="student.address_student"/>
                                    <span t-if="student.birth_place" t-field="student.birth_place"/> , <br/>
                                    <span t-if="student.zip" t-field="student.zip"/> ,
                                    <span t-if="student.state_id" t-field="student.state_id"/> , <span t-if="student.zip" t-field="student.zip"/> , <span t-if="student.country_id" t-field="student.country_id"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Status Aktif</td>
                                    <td>:</td>
                                    <td><span t-if="student.status" t-field="student.status"/></td>
                                </tr>
                                <tr>
                                    <td>Agama</td>
                                    <td>:</td>
                                    <td><span t-if="student.religion" t-field="student.religion"/></td>
                                </tr>
                                <tr>
                                    <td>Nilai</td>
                                    <td>:</td>
                                    <t t-if="student.grade">
                                        <td>Bagus</td>
                                    </t>
                                    <t t-else="">
                                        <td>Kurang</td>
                                    </t>
                                </tr>
                                <tr>
                                    <td>ID Kartu</td>
                                    <td>:</td>
                                    <td><span t-if="student.barcode" t-field="student.barcode"/></td>
                                </tr>
                                <tr>
                                    <td>Tinggi (cm)</td>
                                    <td>:</td>
                                    <td><span t-if="student.height" t-field="student.height"/></td>
                                </tr>
                                <tr>
                                    <td>Berat (kg)</td>
                                    <td>:</td>
                                    <td><span t-if="student.weight" t-field="student.weight"/></td>
                                </tr>
                                <tr>
                                    <td colspan="3"><h3>Data Orang Tua</h3></td>
                                </tr>
                                <tr>
                                    <td>Ayah</td>
                                    <td>:</td>
                                    <td><span t-if="student.father_id" t-field="student.father_id.name"/></td>
                                </tr>
                                <tr>
                                    <td>Tanggal Lahir Ayah</td>
                                    <td>:</td>
                                    <td><span t-if="student.father_birth_date" t-field="student.father_birth_date"/></td>
                                </tr>
                                <tr>
                                    <td>Umur Ayah</td>
                                    <td>:</td>
                                    <td><span t-if="student.father_age" t-field="student.father_age"/></td>
                                </tr>
                                <tr>
                                    <td>Pendidikan</td>
                                    <td>:</td>
                                    <td><span t-if="student.father_education" t-field="student.father_education"/></td>
                                </tr>
                                <tr>
                                    <td>Pekerjaan Ayah</td>
                                    <td>:</td>
                                    <td><span t-if="student.father_job" t-field="student.father_job.name"/></td>
                                </tr>
                                <tr>
                                    <td>Ayah Meninggal</td>
                                    <td>:</td>
                                    <t t-if="student.father_died">
                                        <td>Ya</td>
                                    </t>
                                    <t t-else="">
                                        <td>-</td>
                                    </t>
                                </tr>
                                <tr>
                                    <td>Ibu</td>
                                    <td>:</td>
                                    <td><span t-if="student.mother_id" t-field="student.mother_id.name"/></td>
                                </tr>
                                <tr>
                                    <td>Tanggal Lahir Ibu</td>
                                    <td>:</td>
                                    <td><span t-if="student.mother_birth_date" t-field="student.mother_birth_date"/></td>
                                </tr>
                                <tr>
                                    <td>Umur Ibu</td>
                                    <td>:</td>
                                    <td><span t-if="student.mother_age" t-field="student.mother_age"/></td>
                                </tr>
                                <tr>
                                    <td>Pendidikan</td>
                                    <td>:</td>
                                    <td><span t-if="student.mother_education" t-field="student.mother_education"/></td>
                                </tr>
                                <tr>
                                    <td>Pekerjaan</td>
                                    <td>:</td>
                                    <td><span t-if="student.mother_job" t-field="student.mother_job.name"/></td>
                                </tr>
                                <tr>
                                    <td>Ibu Meninggal</td>
                                    <td>:</td>
                                    <t t-if="student.mother_died">
                                        <td>Ya</td>
                                    </t>
                                    <t t-else="">
                                        <td>-</td>
                                    </t>
                                </tr>
                            </table>
                            <br/>
                            <p style="position:relative;left:57px">Terakhir Diperbaharui pada <span t-if="student.write_date" t-field="student.write_date"/></p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>