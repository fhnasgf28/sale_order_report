<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_booking_order_wizard_pdf">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h1>BOOKING ORDER REPORT</h1>
                    <div class="row">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>No. Booking Order:</th>
                                    <th>Customer:</th>
                                    <th>Transaction Date:</th>
                                    <th>Total Sales:</th>
                                </tr>
                            </thead>
                            <t t-set="sorted_datarange" t-value="sorted(datarange, key=lambda l: l['date_booking'])"/>
                            <t t-foreach="sorted_datarange" t-as="line">
                                <tr>
                                    <td><span t-esc="line['reference']"/></td>
                                    <td><span t-esc="line['date_booking']"/></td>
                                    <td><span t-esc="line['customer_id']"/></td>
                                    <td><span t-esc="line['amount_total']"/></td>
                                </tr>
                            </t>
                        </table>
                    </div>
                    <h2>Booking Order Lines</h2>
                    <div class="row">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Price Unit After Tax</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <t t-foreach="report_detail" t-as="line">
                                <tr>
                                    <td><span t-esc="line['product_id']"/></td>
                                    <td><span t-esc="line['product_uom_qty']"/></td>
                                    <td><span t-esc="line['price_unit_tax']"/></td>
                                    <td><span t-esc="line['price_subtotal']"/></td>
                                </tr>
                            </t>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>

