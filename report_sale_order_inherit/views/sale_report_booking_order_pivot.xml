<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_booking_sale_order_pivot" model="ir.ui.view">
            <field name="name">booking_sale.order.pivot</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <pivot string="Booking Order Pivot">
                    <field name="date_order" type="row"/>
                    <field name="partner_id" type="col"/>
                    <field name="amount_total" type="measure"/>
                    <field name="state" type="col"/>
                </pivot>
            </field>
        </record>

        !--action report booking order pivot-->
        <record id="action_report_booking_order_pivot" model="ir.actions.act_window">
            <field name="name">Report Booking Orders</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">pivot</field>
            <field name="domain">[('is_booking', '=', True)]</field>
            <field name="context">{'default_is_booking': True, 'search_default_booking_order': 1}</field>
        </record>

    </data>
</odoo>